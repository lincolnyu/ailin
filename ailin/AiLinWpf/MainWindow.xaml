<Window x:Class="AiLinWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AiLinWpf"
        mc:Ignorable="d"
        Title="爱琳投票助手 （版本1.0.0）" Height="514.875" Width="525">
    <Grid>
        <Grid.Resources>
            <Style TargetType="RichTextBox">
                <Style.Setters>
                    <Setter Property="FontSize" Value="18">
                    </Setter>
                    <Setter Property="BorderThickness" Value="0">
                    </Setter>
                    <Setter Property="IsReadOnly" Value="True">
                    </Setter>
                    <Setter Property="IsDocumentEnabled" Value="True">
                    </Setter>
                </Style.Setters>
            </Style>
            <Style TargetType="TextBlock">
                <Style.Setters>
                    <Setter Property="FontSize" Value="18">
                    </Setter>
                </Style.Setters>
            </Style>
            <Style TargetType="RadioButton">
                <Style.Setters>
                    <Setter Property="FontSize" Value="18">
                    </Setter>
                </Style.Setters>
            </Style>
            <Style TargetType="Button">
                <Style.Setters>
                    <Setter Property="FontSize" Value="18">
                    </Setter>
                </Style.Setters>
            </Style>
        </Grid.Resources>
        <TabControl>
            <TabItem Name="Tab1">
                <TabItem.Header>
                    <TextBlock>投票1（最红）</TextBlock>
                </TabItem.Header>
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"></ColumnDefinition>
                            <ColumnDefinition Width="0*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock FontSize="18">朱琳老师的当前得票是：<TextBlock Name="NumVotes1"></TextBlock></TextBlock>
                            <TextBlock FontSize="18">她目前的人气指数：<TextBlock Name="Popularity1"></TextBlock></TextBlock>
                            <StackPanel Name="VotePage1">
                                <TextBlock>
                                    <Hyperlink RequestNavigate="HyperlinkRequestNavigate" Name="LinsPage1">
                                        她所在的投票页
                                    </Hyperlink>
                                </TextBlock>
                                <TextBlock>
                                    <Hyperlink RequestNavigate="HyperlinkRequestNavigate" Name="LinsProf1">
                                        她在该投票中的介绍
                                    </Hyperlink>
                                </TextBlock>
                            </StackPanel>
                            <TextBlock>
                                <Hyperlink NavigateUri="http://www.ttpaihang.com/vote/rank.php?voteid=43" 
                                       RequestNavigate="HyperlinkRequestNavigate">
                                    该投票的主页
                                </Hyperlink>
                            </TextBlock>
                        </StackPanel>
                        <Image Grid.Column="1">
                        </Image>
                    </Grid>
                    <Button Name="Refresh1">刷新</Button>
                    <Button Name="VoteBtn1">马上投票给她</Button>
                    <StackPanel Name="QuestionForm1" Visibility="Collapsed">
                        <TextBlock>选择问题后投票就立即下达</TextBlock>
                        <TextBlock Name="Question1"></TextBlock>
                        <StackPanel Name="Choices1">
                        </StackPanel>
                        <RichTextBox Name="Result1" Visibility="Collapsed">
                            <FlowDocument>
                                <Paragraph>
                                    <Run Name="ResultText1"></Run>
                                    <Hyperlink Name="ResultPage1">详情</Hyperlink>
                                </Paragraph>
                            </FlowDocument>
                        </RichTextBox>
                    </StackPanel>
                </StackPanel>
            </TabItem>
            <TabItem Name="Tab2">
                <TabItem.Header>
                    <TextBlock>投票2（演技）</TextBlock>
                </TabItem.Header>
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"></ColumnDefinition>
                            <ColumnDefinition Width="0*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock FontSize="18">朱琳老师的当前得票是：<TextBlock Name="NumVotes2"></TextBlock></TextBlock>
                            <TextBlock FontSize="18">她目前的人气指数：<TextBlock Name="Popularity2"></TextBlock></TextBlock>
                            <StackPanel Name="VotePage2">
                                <TextBlock>
                                    <Hyperlink RequestNavigate="HyperlinkRequestNavigate" Name="LinsPage2">
                                        她所在的投票页
                                    </Hyperlink>
                                </TextBlock>
                                <TextBlock>
                                    <Hyperlink RequestNavigate="HyperlinkRequestNavigate" Name="LinsProf2">
                                        她在该投票中的介绍
                                    </Hyperlink>
                                </TextBlock>
                            </StackPanel>
                            <TextBlock>
                                <Hyperlink NavigateUri="http://www.ttpaihang.com/vote/rank.php?voteid=1069" 
                                       RequestNavigate="HyperlinkRequestNavigate">
                                    该投票的主页
                                </Hyperlink>
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                    <Button Name="Refresh2">刷新</Button>
                    <Button Name="VoteBtn2">马上投票给她</Button>
                    <StackPanel Name="QuestionForm2" Visibility="Collapsed">
                        <TextBlock>选择问题后投票就立即下达</TextBlock>
                        <TextBlock Name="Question2"></TextBlock>
                        <StackPanel Name="Choices2">
                        </StackPanel>
                        <RichTextBox Name="Result2" Visibility="Collapsed">
                            <FlowDocument>
                                <Paragraph>
                                    <Run Name="ResultText2"></Run>
                                    <Hyperlink Name="ResultPage2">详情</Hyperlink>
                                </Paragraph>
                            </FlowDocument>
                        </RichTextBox>
                    </StackPanel>
                </StackPanel>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <TextBlock>关注链接</TextBlock>
                </TabItem.Header>
                <StackPanel>
                    <TextBlock>
                        <Hyperlink NavigateUri="http://www.zhulin.net/" 
                               RequestNavigate="HyperlinkRequestNavigate">
                            琳中漫步-朱琳影迷会
                        </Hyperlink>
                    </TextBlock>
                    <TextBlock>
                        <Hyperlink NavigateUri="http://tieba.baidu.com/f?kw=%E6%9C%B1%E7%90%B3" 
                               RequestNavigate="HyperlinkRequestNavigate">
                            百度朱琳吧
                        </Hyperlink>
                    </TextBlock>
                    <TextBlock>
                        <Hyperlink NavigateUri="http://weibo.com/zhulinfanclub" 
                               RequestNavigate="HyperlinkRequestNavigate">
                            朱琳影迷会-新浪微博
                        </Hyperlink>
                    </TextBlock>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
